<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Common">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="enable_nfc"
            android:title="@string/enable_nfc" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="screen_dim_enabled"
            android:title="Auto Screen Dim"
            android:summary="Dims screen after 30 seconds to save battery" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Camera Sensor Zones">
        <SeekBarPreference
            android:defaultValue="50"
            android:key="roi_center_x"
            android:max="100"
            android:title="X Position"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="50"
            android:key="roi_center_y"
            android:max="100"
            android:title="Y Position"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="30"
            android:key="roi_width"
            android:max="100"
            android:title="Sensor Width"
            app:showSeekBarValue="true" />
        <SeekBarPreference
            android:defaultValue="2"
            android:key="roi_spacing"
            android:max="20"
            android:title="Sensor Spacing"
            app:showSeekBarValue="true" />

        <EditTextPreference
            android:defaultValue="0.08"
            android:key="camera_air_sensitivity"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Camera Air Sensitivity"
            android:summary="Brightness change threshold per zone (0.01 - 1.0). Lower = more sensitive. Default: 0.08" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="use_calibration_mode"
            android:title="Presence Detection"
            android:summary="Detects stationary hands. Disable for motion-only detection." />

    </PreferenceCategory>
</PreferenceScreen>